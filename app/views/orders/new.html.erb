

<h1>Order for <a class= "text-success"><%= @item.name %> </a></h1>
	
<%= form_for [@item, @order] do |f|%>
	<% if @order.errors.present? %>
		<div class="alert alert-danger"><%= @order.errors.full_messages.to_sentence %></div>
	<% end %>

	<div class="form-group">
	<%= f.label :quantity %>
	<%= f.number_field :quantiy, class: 'form-control' %>
	</div>
	<%= f.submit nil, class: 'btn btn-primary' %>
	<% end %>

	