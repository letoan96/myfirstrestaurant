<ul>
	<h1>Menu</h1>
</ul>
<div class="container">
	<div class="row">
		<div class="col-sm-6">

			<center><div class="btn-group">
				<% @sections.each do |section| %>
				<%= link_to section.name, menu_path(section_id: section.id) , class: "btn #{params[:section_id] == section.id.to_s ? 'btn-primary' : 'btn-secondary'}" %>
				<% end %>
			</div>
		</center>

		<% if @current_section %> 
		<table class="table">
			<thead>
				<tr>
					<th>Name</th>
					<th>Price</th>
					<th>Order</th>
				</tr>
			</thead>
			<tbody>
				<% @current_section.food_items.each do |item| %>

				<tr>
					<td> <%= link_to item.name, menu_path(id: item.id, section_id: @current_section.id), class: "text #{params[:id] == item.id.to_s ? 'text-primary' : 'text-info'}" %>	 </td>     		
					<td><%= number_to_currency item.price %></td>
					<td><%= link_to "Add to order", new_food_item_order_path(item) , class: 'text-success' %></td>

				</tr>

				<% end %>
			</tbody>
		</table>
		<% else %>
		<div class="alert alert-info">Please select a section</div>

		<% end %>
	</div>
	<div class="col-sm-6">
		<div class="card">
			<% if @item %>
			<img class="card-img-top" style='width: 400px'> <%= image_tag @item.image_url_or_default, :size => "524x400"  %>
			<div class="card-block" >
				<h4 class="card-title">Description</h4>
				<td><%= @item.description %></td>
				<% end %>

			</div>
		</div>
	</div>
</div>
</div>

